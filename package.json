{
  "name": "retreon",
  "version": "0.7.0",
  "description": "A redux toolkit",
  "main": "dist/index.js",
  "module": "es/index.js",
  "repository": "github:retreon/retreon",
  "homepage": "https://retreon.archetype.foundation",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "./bin/compile",
    "test": "./bin/run-tests",
    "test:lint": "eslint src --ext .js,.ts --color",
    "test:unit": "jest --color"
  },
  "keywords": [
    "redux",
    "toolkit",
    "async",
    "actions",
    "reducer",
    "immer"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "src/**/__tests__/*.{js,ts}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "shared-node-browser": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "peerDependencies": {
    "redux": "*"
  },
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.21.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-runtime": "7.21.4",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-typescript": "7.21.4",
    "@types/jest": "29.5.1",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "redux": "4.2.0",
    "ts-jest": "29.1.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@babel/runtime": "7.x.x",
    "immer": "^10.0.0"
  }
}
